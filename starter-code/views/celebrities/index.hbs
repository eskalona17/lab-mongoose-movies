<h2>Celebrities</h2>

<a href="/celebrities/new">New Celebrity</a>

<div class="list">
  {{#each celebrities}}
  <div class="element">
    <a href="/celebrities/{{this._id}}">{{this.name}}</a>
    <form action="/celebrities/{{this._id}}/delete" method="post">
      <button type="submit">Delete</button>
    </form>

    <form action="/celebrities/{{this._id}}/edit" method="post">
      <button type="submit">Edit</button>
    </form>
  </div>
  {{/each}}
</div>