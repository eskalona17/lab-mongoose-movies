<h2>Celebrities</h2>

<div class="container">
  <a href="/celebrities/new">New Celebrity</a>

  <div class="list">
    {{#each celebrities}}
    <div class="element">
      This is the celebrity you've saved: <a href="/celebrities/{{this._id}}">{{this.name}}</a>
      <form action="/celebrities/{{this._id}}/delete" method="post">
        <button type="submit" class="btn btn-danger">Delete</button>
      </form>

      <form action="/celebrities/{{this._id}}/edit" method="post">
        <button type="submit" class="btn btn-info">Edit</button>
      </form>
    </div>
    {{/each}}
  </div>
</div>